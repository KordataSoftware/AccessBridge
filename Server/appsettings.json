{
  "MicrosoftAccess": {
    "DatabaseDirectory": "C:/KD_PF_Connector"
  },
  "WatchDatabase": {
    "Name": "watches"
  },
  "FileUpload": {
    "Directory": "C:/"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.EventLog" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console", "Args": { "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext:l}] {Message:lj}{NewLine}{Exception}" } },
      { "Name": "File", "Args": { "path": "logs/bridge-log.txt", "rollingInterval": "Day", "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext:l}] {Message:lj}{NewLine}{Exception}" } },
      { "Name": "EventLog", "Args": { "restrictedToMinimumLevel": "Warning", "source": "Kordata Access Bridge"} }
    ]
  },
  "AllowedHosts": "*"
}