{
  "MicrosoftAccess": {
    "DatabaseDirectory": "C:/Databases"
  },
  "WatchDatabase": {
    "Name": "watches"
  },
  "FileUpload": {
    "Directory": "C:/Files"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.EventLog" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/bridge-log.txt", "rollingInterval": "Day" } },
      { "Name": "EventLog", "Args": { "restrictedToMinimumLevel": "Warning", "source": "Kordata Access Bridge"} }
    ]
  },
  "AllowedHosts": "*"
}
